// begin of R language shortcuts
// ! only for macOS !
[{
    "key": "ctrl+.",
    "command": "editor.action.insertSnippet",
    "when": "editorTextFocus && editorLangId == 'r'",
    "args": {
        "snippet": " %>% "
    }
},
{
    "key": "ctrl+cmd+.",
    "command": "editor.action.insertSnippet",
    "when": "editorTextFocus && editorLangId == 'r'",
    "args": {
        "snippet": " %<>% "
    }
},
{
    "key": "ctrl+cmd+t",
    "command": "editor.action.insertSnippet",
    "when": "editorTextFocus && editorLangId == 'r'",
    "args": {
        "snippet": " %T>% "
    }
},
{
    "key": "ctrl+shift+.",
    "command": "editor.action.insertSnippet",
    "when": "editorTextFocus && editorLangId == 'r'",
    "args": {
        "snippet": " |> "
    }
},
{
